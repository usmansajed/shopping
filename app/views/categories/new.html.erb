<div class="container">
<%= nested_form_for @category, url: categories_path, html: { multipart: true }, method: :post do |f| %>
<center>
  <h3>Categories</h3>
</center>
<center>
  <%= link_to "Show All Categories" , categories_path%>
</center><br>
<div class="form-group">
  <%= f.label :Category_name %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<!-- Fields for Products -->
<div class="fields">
    <%=f.fields_for :products do |prod|%>
    <%= render 'form_for_products' ,f: prod%><br>     
</div>
<% end %>
<%=f.link_to_add "Add Product" , :products%><br>
<%=f.submit "save", class: "btn btn-default"%>
<%end%>
</div>


























</div>